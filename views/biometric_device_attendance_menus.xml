<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Root "Biometric" section under Attendance -->
    <menuitem id="menu_biometric_root"
              name="Biometric"
              parent="hr_attendance.menu_hr_attendance_root"
              sequence="90"/>

    <!-- Devices -->
    <menuitem id="menu_biometric_devices"
              name="Devices"
              parent="menu_biometric_root"
              action="biometric_device_details_action"
              sequence="10"
              groups="base.group_user"/>

    <!-- Daily Attendance (raw logs view) -->
    <menuitem id="menu_biometric_daily_attendance"
              name="Daily Attendance"
              parent="menu_biometric_root"
              action="daily_attendance_action"
              sequence="20"
              groups="hr_attendance.group_hr_attendance_officer"/>

      <!-- Menu (under your existing Biometric menu) -->
  <menuitem id="menu_bio_config_root"
            name="Configurations"
            parent="menu_biometric_root"
            sequence="21"/>

  <menuitem id="menu_bio_device_users"
            name="Device Users"
            parent="menu_bio_config_root"
            action="biometric_device_user_action"
            sequence="1"/>

</odoo>
